        <div class="row datos">
          <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
              <h4 class="centrado">Ayudanos a hacer el conteo de las actas electorales</h4>
            </div>
          </div>

          <div class="col-sm-12">
            <div class="row">
              <div class="col-sm-4 col-sm-offset-3 ccentrado inpt" id="imgContainer">
              </div>
                             
            </div>

            <div class="row inputt">
              <div class="col-sm-4">
                <input type="text" placeholder="Digitar números de acta" id="txtCounter" autofocus>
              </div>             
               
              <div class="col-sm-4 col-sm-offset-4 centrado"> <button class="btn btn-danger btn-lg" id="btnSend">Enviar Acta</button>
              </div>
            </div>
          </div>

        </div>
        
<script type="text/javascript">
var token = 0;
function loadNew() {
  $.ajax({
    url: "./valida/",
  }).done(function( data ) {
    token = data.token;
    $('#imgContainer').html('<img src="./valida/image/'+token+'"/>');
    $('#txtCounter').val("");
  })
}
function sendResult() {
    if(token!=0) {
      $.ajax({
        url: "./valida/conteo/",
        type: 'POST',
        data: { token: token, value: $('#txtCounter').val() }
      }).done(function( data ) {
        if(data.Status) {
          window.alert("Captcha recibido");
          $('#txtCounter').val("");
          loadNew();
        }
        if(data.Error) {
          window.alert("Error: "+data.Error);
        }
      })
    }
}
$(function () {
  $('#btnSend').click(function () {
    sendResult();imgContainer
  });
  $(document).keypress(function(e) {
    if(e.which == 13) {
      sendResult();
    }
  });
  loadNew();
});
</script>